{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "public"
  },
  "exclude": ["node_modules", "public", ".cache"]
}
